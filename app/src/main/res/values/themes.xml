<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Wikipedia" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/blue500</item>
        <item name="colorPrimaryVariant">@color/blue500</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/red400</item>
        <item name="colorSecondaryVariant">@color/red400</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="fontFamily">@font/primary_regular</item>
    </style>
    
    <style name="MyCustomToolBar" parent="Theme.MaterialComponents">
        <item name="fontFamily">@font/primary_bold</item>
        <item name="android:textSize">28sp</item>
    </style>
</resources>